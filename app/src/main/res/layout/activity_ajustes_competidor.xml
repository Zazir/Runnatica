<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ajustes_competidor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:text="Ajustes Competidor"
            android:textColor="@android:color/background_light"
            android:textSize="40dp"></TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="675dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/barra_verde"
        ></LinearLayout>

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="675dp"
        android:background="@drawable/casa"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/buscar"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="675dp"
        android:background="@drawable/buscar"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/historial"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="675dp"
        android:background="@drawable/historial"
        android:orientation="horizontal"></LinearLayout>
    <LinearLayout
        android:id="@+id/ajustes"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="323dp"
        android:layout_marginTop="675dp"
        android:background="@drawable/ajustes"
        android:orientation="horizontal"></LinearLayout>

    <ListView
        android:id="@+id/lvAjustesCompetidor"
        android:layout_width="match_parent"
        android:layout_height="596dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="0dp"></ListView>

</RelativeLayout>