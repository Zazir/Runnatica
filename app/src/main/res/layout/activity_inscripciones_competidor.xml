<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InscripcionesCompetidor">

    <LinearLayout
        android:id="@+id/mmda"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Inscripcion Competidor"
            android:textColor="@android:color/background_light"
            android:textSize="30dp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Boleto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/mmda">

        <TextView
            android:id="@+id/txtBoletito"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Boletos: "
            android:textColor="@android:color/background_dark"
            android:textSize="25dp"/>

        <Spinner
            android:id="@+id/spBoletos"
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/txtBoletito"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvInscripciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Boleto"
        android:layout_above="@+id/kk"
        />

    <LinearLayout
        android:id="@+id/kk"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height">

        <Button
            android:id="@+id/btnSegundoPaso"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:enabled="false"
            android:textColor="@android:color/background_light"
            android:textSize="35dp"/>
    </LinearLayout>



</RelativeLayout>