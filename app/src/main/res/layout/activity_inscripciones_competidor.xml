<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InscripcionesCompetidor">

    <LinearLayout
        android:id="@+id/mmda"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Inscripcion Competidor"
            android:textColor="@android:color/background_light"
            android:textSize="30dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/igvTicket"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mmda"
        android:layout_marginBottom="5dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvInscripciones"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/kk"
        android:layout_below="@+id/igvTicket"/>

    <LinearLayout
        android:id="@+id/kk"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height">

        <Button
            android:id="@+id/btnSegundoPaso"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="Siguiente paso"
            android:textColor="@android:color/background_light"
            android:enabled="false"
            android:textSize="35dp"/>
    </LinearLayout>



</RelativeLayout>