<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informacion_inscrito">

    <LinearLayout
        android:id="@+id/arriva3"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:id="@+id/tvNombreCompetencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="Datos Inscrito"
            android:textColor="@android:color/background_light"
            android:textSize="35dp"></TextView>
    </LinearLayout>


    <TextView
        android:id="@+id/tvNombreinscrito"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_below="@+id/arriva3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Nombre del Usuario Competidor"
        android:textColor="@android:color/background_dark"
        android:textSize="35dp"/>

    <TextView
        android:id="@+id/txtCorreo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNombreinscrito"
        android:text="Correo:"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tvCorreoInscrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtCorreo2"
        android:gravity="center"
        android:text="Correo del usuario competidor"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvFechaInscripcion1"
        android:layout_width="274dp"
        android:layout_height="31dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tvCorreoInscrito"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Fecha de InscripciÃ³n:"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tvFechaInscripcion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFechaInscripcion1"
        android:gravity="center"
        android:text="4 - 04 - 2019"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvNacimientoUsuario1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvFechaInscripcion2"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Edad del usuario"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tvNacimientoUsuario2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/tvNacimientoUsuario1"
        android:text="4 - 04 - 2019"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/MenuOrganizador"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main"
        ></com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>