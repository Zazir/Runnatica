<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subir_Resultados">

    <LinearLayout
        android:id="@+id/tvResultados"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Resultados"
            android:textColor="@android:color/background_light"
            android:textSize="35dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below= "@+id/tvResultados">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/kk"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:text="Subir Imagenes de Resultados:"
                android:textColor="@android:color/background_dark"
                android:gravity="center"
                android:textSize="35dp"
                android:layout_marginTop="25dp"
                tools:ignore="NotSibling"></TextView>

            <Button
                android:id="@+id/btnSeleccioarResultados"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/kk"
                android:layout_centerHorizontal="true"
                android:text="Seleccionar"
                android:textColor="@android:color/background_dark"/>

            <TextView
                android:id="@+id/Sugerencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSeleccioarResultados"
                android:text="Foto con la siguiente informaciÃ³n:"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/Sugerencias2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Sugerencias"
                android:text="- Nombre de Competidores"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@android:color/background_dark"/>

            <TextView
                android:id="@+id/Sugerencias3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Sugerencias2"
                android:text="- Lugar de cada competidor"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@android:color/background_dark"/>

            <TextView
                android:id="@+id/Sugerencias4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Sugerencias3"
                android:text="- Tiempo hecho en la Ruta"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@android:color/background_dark"/>

            <Button
                android:id="@+id/btnSubirResultados"
                android:layout_centerHorizontal="true"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/Sugerencias4"
                android:text="Subir Resultados"
                android:textColor="@android:color/background_dark"/>

            <ImageView
                android:id="@+id/ivFotosResultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnSubirResultados"/>

        </RelativeLayout>

    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/MenuOrganizador"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main"
        ></com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>