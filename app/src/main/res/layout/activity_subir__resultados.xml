<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Subir_Resultados">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNombreCompetencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Resultados"
            android:textColor="@android:color/background_light"
            android:textSize="35dp"></TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="469dp"
        android:layout_height="613dp"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="46dp"
                android:layout_marginEnd="-2dp"
                android:text="Subir Imagenes de Resultados:"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"></TextView>

            <Button
                android:id="@+id/btnSeleccioarResultados"
                android:layout_width="164dp"
                android:layout_height="37dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="146dp"
                android:layout_marginEnd="168dp"
                android:text="Seleccionar"
                android:textColor="@android:color/background_dark"></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="156dp"
                android:layout_marginEnd="96dp"
                android:text="Imagenes"
                android:textColor="@android:color/background_dark"></TextView>

            <Button
                android:id="@+id/btnSubirResultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="195dp"
                android:layout_marginEnd="1dp"
                android:text="Subir Fotos"
                android:textColor="@android:color/background_dark"></Button>

            <ImageView
                android:id="@+id/ivFotosResultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSubirResultados"
                ></ImageView>

        </RelativeLayout>

    </ScrollView>


    <LinearLayout
        android:layout_width="495dp"
        android:layout_height="78dp"
        android:layout_marginTop="570dp"
        android:background="@drawable/barra_verde"
        >
        <TextView
            android:id="@+id/btnAtras"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Atras"
            android:textColor="@android:color/background_light"
            android:textSize="25dp"></TextView>

    </LinearLayout>

</RelativeLayout>