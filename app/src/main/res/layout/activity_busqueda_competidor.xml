<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".busqueda_competidor">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Buscar/Filtrar"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="40dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll"
        android:layout_above="@+id/bottomNavigation"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/xx"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Por fecha"
                android:textColor="@android:color/background_dark"
                android:textSize="35sp"/>

            <Button
                android:id="@+id/btnFiltroFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar fecha"
                android:layout_below="@+id/xx"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:text="Por lugar"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="220dp"
                android:text="Pais"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"/>

            <Button
                android:id="@+id/btnBuscarPais"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="220dp"
                android:text="B"/>

            <Spinner
                android:id="@+id/spFiltroPais"
                android:layout_width="169dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="270dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="220dp"
                android:text="Estado"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"/>

            <Button
                android:id="@+id/btnBuscarEstado"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="220dp"
                android:text="B"/>

            <Spinner
                android:id="@+id/spFiltroEstado"
                android:layout_width="168dp"
                android:layout_height="48dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="270dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFiltroCompetencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spFiltroPais"
                android:layout_marginTop="0dp" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main_menu"/>


</RelativeLayout>