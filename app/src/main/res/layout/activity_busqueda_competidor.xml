<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".busqueda_competidor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="5dp"
            android:text="Buscar/Filtrar"
            android:textColor="@android:color/background_light"
            android:textSize="40dp"></TextView>
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="266dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="61dp"
                android:layout_marginEnd="94dp"
                android:text="Fecha:"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="110dp"
                android:text="Día"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"></TextView>

            <Spinner
                android:layout_width="103dp"
                android:layout_height="51dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="170dp">
            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="110dp"
                android:text="Mes"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"></TextView>
            <Spinner
                android:layout_width="103dp"
                android:layout_height="51dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="170dp">
            </Spinner>

            <TextView
                android:layout_width="94dp"
                android:layout_height="54dp"
                android:layout_marginLeft="270dp"
                android:layout_marginTop="110dp"
                android:text="Año"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"></TextView>

            <Spinner
                android:layout_width="131dp"
                android:layout_height="49dp"
                android:layout_marginLeft="260dp"
                android:layout_marginTop="170dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="240dp"
                android:text="Lugar:"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"></TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="300dp"
                android:text="Pais"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"></TextView>

            <Spinner
                android:layout_width="169dp"
                android:layout_height="48dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="350dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="225dp"
                android:layout_marginTop="300dp"
                android:text="Estado"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"></TextView>

            <Spinner
                android:layout_width="168dp"
                android:layout_height="48dp"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="350dp"></Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="420dp"
                android:text="Kilometros"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"></TextView>

            <EditText
                android:id="@+id/BuscarKilometros"
                android:layout_width="201dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="480dp"
                ></EditText>

            <Button
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="580dp"
                android:text="Buscar"
                android:textColor="@android:color/background_light"
                android:textSize="20dp"
                android:background="@color/verdeRun"
                ></Button>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="750dp"
                ></TextView>
        </RelativeLayout>
    </ScrollView>



    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="570dp"
        android:background="@drawable/barra_verde"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main_menu">

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>