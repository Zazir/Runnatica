<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".busqueda_competidor">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Buscar/Filtrar"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="40dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll"
        android:layout_above="@+id/bottomNavigation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/algo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Titulo"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Buscar Competencia: "
                    android:textColor="@android:color/background_dark"
                    android:textSize="35sp"/>

                <Button
                    android:id="@+id/btnAnother"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Titulo"
                    android:text="Otra BÃºsqueda"
                    android:layout_centerHorizontal="true"
                    android:drawableLeft="@drawable/buscar"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/llFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Titulo"
                    android:background="@drawable/btn_desing1"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp">

                    <TextView
                        android:id="@+id/xx"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="Por fecha:"
                        android:textColor="@android:color/background_dark"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/btnFiltroFecha"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/xx"
                        android:text="Seleccionar fecha"
                        android:layout_centerHorizontal="true"
                        android:drawableLeft="@drawable/buscar"
                        android:layout_marginBottom="2dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/llEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llFecha"
                    android:background="@drawable/btn_desing1"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp">

                    <TextView
                        android:id="@+id/Estado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="Por Estado: "
                        android:textColor="@android:color/background_dark"
                        android:textSize="30dp" />

                    <Button
                        android:id="@+id/btnBuscarEstado"
                        android:layout_width="200dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/spFiltroEstado"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="Buscar"
                        android:drawableLeft="@drawable/buscar"
                        android:layout_marginBottom="2dp"/>

                    <Spinner
                        android:id="@+id/spFiltroEstado"
                        android:layout_width="188dp"
                        android:layout_height="39dp"
                        android:layout_below="@+id/Estado"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFiltroCompetencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/algo"
                android:layout_marginTop="5dp" />

        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tvAdvertencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="No hay carreras con esas especificaciones"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:visibility="gone"
        android:typeface="serif"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main_menu"/>


</RelativeLayout>