<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Centrodeayuda">

    <LinearLayout
        android:id="@+id/arriba1"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:background="@drawable/barra_verde">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Centro de Ayuda"
                android:textColor="@android:color/background_light"
                android:textSize="40dp">
            </TextView>
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/txtTelefonos"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arriba1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Telefonos:"
        android:textColor="@android:color/background_dark"
        android:textSize="30dp"></TextView>

    <TextView
        android:id="@+id/txtTelefonos1"
        android:layout_width="181dp"
        android:layout_height="37dp"
        android:layout_below="@+id/txtTelefonos"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="(33)26738162"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"></TextView>

    <TextView
        android:id="@+id/txtTelefonos2"
        android:layout_width="181dp"
        android:layout_height="37dp"
        android:layout_below="@+id/txtTelefonos1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="(33)33427679"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"></TextView>

    <TextView
        android:id="@+id/txtMensaje"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
       android:layout_below="@+id/txtTelefonos2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Mandar Mensaje:"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"></TextView>

    <EditText
        android:id="@+id/et_text"
        android:layout_width="376dp"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtMensaje"
        ></EditText>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_text"
        android:background="@color/verdeRun"
        android:text="Enviar"></Button>

    <TextView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_submit"
        android:gravity="center"
        android:text="La respuesta se mandara a su correo en 24 a 72 horas"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"></TextView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main_menu"/>



</RelativeLayout>