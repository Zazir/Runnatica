<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeRun"
    tools:context=".Login">


    <TextView
        android:id="@+id/Runnatica"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/archivo_black"
        android:text="Runnatica"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Correo"
        android:layout_width="154dp"
        android:layout_height="59dp"
        android:layout_below="@+id/Runnatica"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:text="Correo"
        android:textColor="#F4F5F7"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Contrasena"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:text="ContraseÃ±a"
        android:textColor="#F4F5F7"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/etContrasena"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Runnatica"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/etContrasena"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Correo"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="383dp"
        android:background="@color/grisBoton"
        android:text="Entrar"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="57dp"
        android:layout_marginTop="447dp"
        android:background="@color/grisBoton"
        android:text="Registrase"
        android:textSize="20sp" />





</RelativeLayout>