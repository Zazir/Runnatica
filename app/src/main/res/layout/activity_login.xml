<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/verdeRun"
    tools:context=".Login">


    <TextView
        android:id="@+id/Runnatica"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/archivo_black"
        android:text="Runnatica"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/Correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Runnatica"
        android:layout_centerHorizontal="true"
        android:text="Correo"
        android:textColor="#F4F5F7"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Correo"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/Contrasena"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:text="ContraseÃ±a"
        android:textColor="#F4F5F7"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etUsuario"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etContrasena"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Contrasena"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>

    <RadioButton
        android:id="@+id/radioSesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mantener sesion activa"
        android:layout_marginTop="1500dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnEntrar"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:padding="2dp"
        android:layout_below="@+id/etContrasena"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/grisBoton"
        android:text="Entrar"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnRegistrarse"
        android:layout_width="259dp"
        android:layout_height="50dp"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btnEntrar"
        android:background="@color/grisBoton"
        android:text="Registrase"
        android:textSize="20sp" />
</RelativeLayout>