<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crear_competencia">

    <LinearLayout
        android:id="@+id/llCrearCompetencia"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Crear Competencia"
            android:textColor="@android:color/background_light"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCrearCompetencia"
        android:layout_above="@+id/bottomNavigation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtInformacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Información Principal"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <Button
                android:id="@+id/btnSeleccionarLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar lugar"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/txtNombreCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtInformacion"
                android:layout_marginLeft="20dp"
                android:text="Nombre de la Competencia"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <EditText
                android:id="@+id/etNombreCompetencia"
                android:layout_width="381dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNombreCompetencia"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/background_dark"
                >
            </EditText>

            <TextView
                android:id="@+id/txtPrecio"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etNombreCompetencia"
                android:layout_marginLeft="20dp"
                android:text="Precio de la Competencia"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtPrecio"
                android:text="$"
                android:textColor="@android:color/background_dark"
                android:textSize="30dp"></TextView>

            <EditText
                android:id="@+id/etPrecioCompetencia"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:layout_below="@+id/txtPrecio"
                android:numeric="integer"
                android:inputType="number"
                ></EditText>

            <Button
                android:id="@+id/btnInformacionPrecio"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginLeft="235dp"
                android:layout_below="@+id/txtPrecio"
                android:text="Información"></Button>

            <TextView
                android:id="@+id/txtFechaCompetencia"
                android:layout_width="362dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/etPrecioCompetencia"
                android:text="Fecha de la Competencia"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/tvFechaPicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtFechaCompetencia"
                android:text="Selecciona la Fecha"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"></TextView>

            <Button
                android:id="@+id/btnSeleccionarFecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/tvFechaPicker"
                android:text="Seleccionar fecha"/>

            <TextView
                android:id="@+id/tvHoraCompetencia"
                android:layout_width="68dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtFechaCompetencia"
                android:layout_marginLeft="250dp"
                android:text="Hora"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnHoraCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="210dp"
                android:layout_below="@+id/tvHoraCompetencia"
                android:text="Seleccionar hora" />

            <TextView
                android:id="@+id/txtImagenEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSeleccionarFecha"
                android:layout_marginLeft="20dp"
                android:text="Imagen del Evento"
                android:textColor="@android:color/background_dark"
                android:textSize="30dp"></TextView>

            <Button
                android:id="@+id/btnImagenCompetencia"
                android:layout_width="234dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtImagenEvento"
                android:text="Subir"></Button>

            <TextView
                android:id="@+id/tvImgNombre"
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_below="@+id/txtImagenEvento"
                android:layout_marginTop="15dp"
                android:text="Imagen"
                android:textSize="20dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <ImageView
                android:id="@+id/imgCompetencia"
                android:layout_below="@+id/btnGuardarCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="430dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/txtDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvImgNombre"
                android:layout_marginLeft="20dp"
                android:text="Dirección"
                android:textColor="@android:color/background_dark"
                android:textSize="30dp"></TextView>
            <TextView
                android:id="@+id/txtPais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pais:"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtDireccion"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                ></TextView>
            <TextView
                android:id="@+id/txtEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado:"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/spPaisCompetencia"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                ></TextView>
            <TextView
                android:id="@+id/txtCiudadCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad:"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/spEstadoCompetencia"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                ></TextView>
            <EditText
                android:id="@+id/etCiudadCompetencia"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtCiudadCompetencia"
                ></EditText>
            <TextView
                android:id="@+id/txtColoniaCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colonia:"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/etCiudadCompetencia"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                ></TextView>
            <EditText
                android:id="@+id/etColoniaCompetencia"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtColoniaCompetencia"></EditText>

            <Spinner
                android:id="@+id/spPaisCompetencia"
                android:layout_width="207dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtPais"
                ></Spinner>
            <Spinner
                android:id="@+id/spEstadoCompetencia"
                android:layout_width="207dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtEstado"></Spinner>
            <TextView
                android:id="@+id/txtCalleCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calle:"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/etColoniaCompetencia"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"
                ></TextView>
            <EditText
                android:id="@+id/etCalleCompetencia"
                android:layout_width="321dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtCalleCompetencia"
                ></EditText>

            <TextView
                android:id="@+id/txtAval"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/etCalleCompetencia"
                android:layout_marginLeft="20dp"
                android:text="Aval del Evento"
                android:textColor="@android:color/background_dark"
                android:textSize="30dp"></TextView>

            <Button
                android:id="@+id/btnAvalCompetencia"
                android:layout_width="228dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtAval"
                android:text="Subir"></Button>

            <ImageView
                android:id="@+id/imgCompetencia2"
                android:layout_below="@+id/imgCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="430dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="108dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="270dp"
                android:layout_below="@+id/txtAval"
                android:text="Documento"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/btnAvalCompetencia"
                android:text="Descripcion de la Competencia"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <EditText
                android:id="@+id/etDescripcionCompetencia"
                android:layout_width="369dp"
                android:layout_height="129dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/txtDescripcion"
                android:textColor="@android:color/background_dark"></EditText>

            <Button
                android:id="@+id/btnGuardarCompetencia"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_below="@+id/etDescripcionCompetencia"
                android:background="@color/grisBoton"
                android:text="Siguiente"></Button>

        </RelativeLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main_menu"/>
</RelativeLayout>