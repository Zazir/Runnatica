<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crear_competencia">

    <LinearLayout
        android:id="@+id/llCrearCompetencia"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Crear Competencia"
            android:textColor="@android:color/background_light"
            android:textSize="30dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llCrearCompetencia"
        android:layout_above="@+id/bottomNavigation"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtInformacion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Información Principal"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/txtNombreCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtInformacion"
                android:layout_centerHorizontal="true"
                android:text="Nombre de la Competencia"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp"/>

            <EditText
                android:id="@+id/etNombreCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtNombreCompetencia"
                android:textColor="@android:color/background_dark" />

            <TextView
                android:id="@+id/txtPrecio"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etNombreCompetencia"
                android:layout_centerHorizontal="true"
                android:text="Precio de la Competencia"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/txtSimbol"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_marginStart="25dp"
                android:layout_below="@+id/txtPrecio"
                android:text="$"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp"/>

            <EditText
                android:id="@+id/etPrecioCompetencia"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/txtSimbol"
                android:layout_below="@+id/txtPrecio"
                android:numeric="integer"
                android:inputType="number"/>

            <Button
                android:id="@+id/btnInformacionPrecio"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPrecio"
                android:layout_toEndOf="@+id/etPrecioCompetencia"
                android:text="Información"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txtFechaCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/etPrecioCompetencia"
                android:text="Fecha de la Competencia"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/tvFechaPicker"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/txtFechaCompetencia"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"
                android:text="Seleccionar fecha"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnSeleccionarFecha"
                android:layout_width="259dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:layout_centerHorizontal="true"
                android:backgroundTint="#ef9a9a"
                android:layout_below="@+id/tvFechaPicker"
                android:drawableLeft="@drawable/calendar"
                android:text="Fecha"/>

            <TextView
                android:id="@+id/tvHoraCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSeleccionarFecha"
                android:layout_centerHorizontal="true"
                android:text="Seleccionar hora"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnHoraCompetencia"
                android:layout_width="259dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tvHoraCompetencia"
                android:backgroundTint="#ef9a9e"
                android:drawableLeft="@drawable/hour"
                android:text="hora" />

            <TextView
                android:id="@+id/txtImagenEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnHoraCompetencia"
                android:layout_centerHorizontal="true"
                android:text="Imagen del Evento"
                android:textColor="@android:color/background_dark"
                android:textSize="30dp"/>

            <ImageView
                android:id="@+id/imgCompetencia"
                android:layout_below="@id/txtImagenEvento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/btnImagenCompetencia"
                android:layout_width="259dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imgCompetencia"
                android:text="Seleccionar"/>

            <TextView
                android:id="@+id/txtDireccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnImagenCompetencia"
                android:layout_centerHorizontal="true"
                android:text="Lugar de la Competencia"
                android:textColor="@android:color/background_dark"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/txtPais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pais:"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tvCoordenadas"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado:"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/txtPaisCompetencia"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/txtCiudadCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ciudad:"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/txtEstadoCompetencia"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvCiudadCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/txtCiudadCompetencia"
                android:text="Ciudad"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/txtColoniaCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colonia:"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/tvCiudadCompetencia"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/tvColoniaCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtColoniaCompetencia"
                android:text="Colonia"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/txtPaisCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtPais"
                android:text="Pais"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/txtEstadoCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtEstado"
                android:text="Estado"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/txtCalleCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calle:"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/tvColoniaCompetencia"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/tvCalleCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCalleCompetencia"
                android:layout_centerHorizontal="true"
                android:text="Calle"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnSeleccionarLugar"
                android:layout_width="259dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:layout_centerHorizontal="true"
                android:textSize="10dp"
                android:layout_below="@+id/txtDireccion"
                android:text="Seleccionar inicio de la competencia"/>

            <TextView
                android:id="@+id/tvCoordenadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coordenadas"
                android:layout_below="@+id/btnSeleccionarLugar"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/darker_gray"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/txtAval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Aval del Evento"
                android:layout_below="@+id/tvCalleCompetencia"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp"/>

            <ImageView
                android:id="@+id/imgAval"
                android:layout_below="@id/txtAval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

            <Button
                android:id="@+id/btnAvalCompetencia"
                android:layout_width="259dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/imgAval"
                android:text="Subir"/>

            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/btnAvalCompetencia"
                android:text="Descripcion de la Competencia"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"/>

            <EditText
                android:id="@+id/etDescripcionCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtDescripcion"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:inputType="textMultiLine"
                android:textColor="@android:color/background_dark"/>


            <Button
                android:id="@+id/btnGuardarCompetencia"
                android:layout_width="259dp"
                android:layout_height="50dp"
                android:padding="2dp"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:layout_below="@+id/etDescripcionCompetencia"
                android:background="@color/grisBoton"
                android:layout_marginEnd="20dp"
                android:text="Siguiente"/>

        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main_menu"/>
</RelativeLayout>