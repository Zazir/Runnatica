<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro_basico">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Registrarse"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/Runnatica"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:text="Ingresa la siguiente Información:"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/Correo"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Runnatica"
        android:layout_marginLeft="20dp"
        android:text="Correo:"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/Contrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etUsuario"
        android:layout_marginLeft="20dp"
        android:text="Contraseña:"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/VerificarContrasena"
        android:layout_width="317dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etContrasena"
        android:layout_marginLeft="20dp"
        android:text="Repetir contraseña:"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/etUsuario"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Correo"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/etContrasena"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Contrasena"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>
    <EditText
        android:id="@+id/etVerificarContrasena"
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VerificarContrasena"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="447dp"
        android:background="@color/grisBoton"
        android:text="Siguiente"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        ></LinearLayout>

</RelativeLayout>