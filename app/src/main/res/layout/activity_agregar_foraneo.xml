<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agregarForaneo">

    <LinearLayout
        android:id="@+id/kk"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@color/cardview_dark_background"
            android:text="Volver"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Agregar usuarios foráneos"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"></TextView>
    </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/kk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etNombreForaneo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Nombre"
                    android:ems="10" />

                <EditText
                    android:id="@+id/etCorreoForaneo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Correo"
                    android:ems="10"
                    android:inputType="textEmailAddress" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/rbtnHombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hombre" />

                    <RadioButton
                        android:id="@+id/rbtnMujer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mujer" />
                </RadioGroup>

                <EditText
                    android:id="@+id/etEdadForaneo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Edad"
                    android:ems="10"
                    android:inputType="number" />

                <Button
                    android:id="@+id/btnCreateForaneo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crear usuario foráneo"/>

            </LinearLayout>

</RelativeLayout>