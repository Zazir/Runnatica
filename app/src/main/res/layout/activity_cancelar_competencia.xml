<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cancelar_competencia">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Cancelar Competencia"
            android:textColor="@android:color/background_light"
            android:textSize="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/logo"
        android:layout_width="186dp"
        android:layout_height="183dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="108dp"
        android:background="@drawable/cancelar"
        android:orientation="vertical"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="301dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Â¿Seguro que deseas cancelar esta competencia?"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btnSiCancelar"
        android:layout_width="122dp"
        android:layout_height="71dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="385dp"
        android:text="Si"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btnNoCancelar"
        android:layout_width="122dp"
        android:layout_height="71dp"
        android:layout_toRightOf="@+id/btnSiCancelar"
        android:layout_marginTop="387dp"
        android:layout_marginEnd="28dp"
        android:text="No"
        android:textSize="25dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        ></LinearLayout>

</RelativeLayout>