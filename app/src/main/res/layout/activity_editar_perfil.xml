<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Editar_perfil">

    <LinearLayout
        android:id="@+id/llEditar"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Editar Perfil"
            android:textColor="@android:color/background_light"
            android:textSize="40dp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="469dp"
        android:layout_height="613dp"
        android:layout_below="@+id/llEditar"
        android:layout_above="@+id/bottomNavigation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnEditarCorreo"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:text="Editar Correo"
                android:textColor="@android:color/background_dark"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/btnEditarContrasena"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/btnEditarCorreo"
                android:text="Editar ContraseÃ±a"
                android:textColor="@android:color/background_dark"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/txtFechaN"
                android:layout_width="346dp"
                android:layout_height="39dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/btnHombreEditar"
                android:text="Fecha de Nacimiento:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />


            <Button
                android:id="@+id/btnSeleccionNacimiento"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:textSize="15sp"
                android:layout_below="@+id/txtFechaN"
                android:background="@color/grisBoton"
                android:text="Seleccionar Fecha"
                android:drawableLeft="@drawable/calendar"
                android:textColor="@android:color/background_dark"></Button>

            <TextView
                android:id="@+id/tvMostrarFechaEditar"
                android:layout_width="367dp"
                android:layout_height="48dp"
                android:layout_below="@+id/btnSeleccionNacimiento"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/Ciudad"
                android:layout_width="117dp"
                android:layout_height="33dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/tvResidencia"
                android:layout_marginEnd="243dp"
                android:text="Ciudad:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/etCiudadEditar"
                android:text="Estado:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvPais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/etEstadoEditar"
                android:text="Pais:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />


            <EditText
                android:id="@+id/etCiudadEditar"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:inputType="text"
                android:layout_below="@+id/Ciudad" />

            <EditText
                android:id="@+id/etEstadoEditar"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/tvEstado"
                android:inputType="text"
                />

            <EditText
                android:id="@+id/etPaisEditar"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/tvPais" />

            <Button
                android:id="@+id/btnMujerEditar"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/txtSexo"
                android:background="@color/grisBoton"
                android:layout_centerHorizontal="true"
                android:text="Mujer"
                android:drawableLeft="@drawable/mujer"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnHombreEditar"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"
                android:layout_below="@+id/btnMujerEditar"
                android:layout_marginTop="10dp"
                android:background="@color/grisBoton"
                android:text="Hombre"
                android:drawableLeft="@drawable/mujer"
                android:textColor="@android:color/background_dark"/>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="184dp"
                android:layout_height="49dp"
                android:layout_below="@+id/ivFotoUsuarioNueva"
                android:layout_centerHorizontal="true"
                android:background="@color/grisBoton"
                android:text="Guardar"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />
            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="184dp"
                android:layout_height="49dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/btnGuardar"
                android:layout_centerHorizontal="true"
                android:background="@color/px_color_red_error"
                android:text="Cancelar"
                android:textColor="@android:color/background_light"
                android:textSize="20sp" />


            <Button
                android:id="@+id/btnFotoEditar"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_below="@+id/tvFoto"
                android:background="@color/grisBoton"
                android:text="Seleccionar"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtnombre"
                android:layout_width="346dp"
                android:layout_height="39dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/btnEditarContrasena"
                android:text="Nombre y Apellido:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnFotoEditar"
                android:text="Archivo"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/tvResidencia"
                android:layout_width="346dp"
                android:layout_height="39dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/tvMostrarFechaEditar"
                android:text="Lugar de Residencia:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvFoto"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPaisEditar"
                android:text="Foto:"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtSexo"
                android:layout_width="346dp"
                android:layout_height="39dp"
                android:layout_below="@+id/etNombreEditar"
                android:layout_marginEnd="41dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Sexo:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/etNombreEditar"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_below="@+id/txtnombre"
                android:layout_marginEnd="37dp"
                android:inputType="text"
                />

            <ImageView
                android:id="@+id/ivFotoUsuarioNueva"
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:layout_below="@+id/textView9"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="900dp"
                ></TextView>


        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main_menu"/>

</RelativeLayout>

