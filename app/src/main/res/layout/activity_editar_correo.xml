<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarCorreo">

    <LinearLayout
        android:id="@+id/llEditarCorreo"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Editar Correo"
            android:textColor="@android:color/background_light"
            android:textSize="40dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvIntroduceCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llEditarCorreo"
        android:text="Introduce el nuevo correo"
        android:gravity="center"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/etCorreoNuevo"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvIntroduceCorreo"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/contra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etCorreoNuevo"
        android:text="Confirma tu contraseÃ±a"
        android:gravity="center"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/confirmContrasena"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contra"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnVerificarCorreo"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmContrasena"
        android:layout_centerHorizontal="true"
        android:text="Verificar Correo"/>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main_menu"/>

</RelativeLayout>