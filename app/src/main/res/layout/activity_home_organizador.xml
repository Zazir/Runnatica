<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home_organizador">

    <LinearLayout
        android:id="@+id/mmda"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:id="@+id/tvNombreCiudad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Tus competencias activas"
            android:textColor="@android:color/background_light"
            android:textSize="40dp"></TextView>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAdministradorCompetencias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/MenuOrganizador"
        android:layout_below="@+id/mmda"/>


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/MenuOrganizador"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main"
        ></android.support.design.widget.BottomNavigationView>

</RelativeLayout>