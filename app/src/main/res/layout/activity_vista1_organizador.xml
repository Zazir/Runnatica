<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista1_organizador">

    <LinearLayout
        android:id="@+id/llNombreTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/barra_verde">

        <TextView
            android:id="@+id/tvNombreCompetencia"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Nombre Competencia"
            android:textColor="@android:color/background_light"
            android:textSize="35dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/svVistaOrganizador"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llNombreTitulo"
        android:layout_above="@+id/MenuOrganizador">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtVentas"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Total Ventas"
                android:textSize="35dp"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/background_dark"/>

            <TextView
                android:id="@+id/txtingreso"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtVentas"
                android:text="Precio de la Competencia:"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/ingreso"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txtingreso"
                android:text="Precio"
                android:textSize="35dp"
                ></TextView>


            <TextView
                android:id="@+id/txtInscripcionesVendidas"
                android:layout_width="279dp"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ingreso"
                android:text="Inscripciones Vendidas:"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <RelativeLayout
                android:id="@+id/llIncripcionesVendidas"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_below="@+id/txtInscripcionesVendidas">

                <TextView
                    android:id="@+id/tvInscripcionesVendidas"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:text="50"
                    android:textColor="@android:color/background_dark"
                    android:textSize="25dp"></TextView>

                <TextView
                    android:id="@+id/Barra1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tvInscripcionesVendidas"
                    android:text="/"
                    android:textColor="@android:color/background_dark"
                    android:textSize="25dp"></TextView>
                <TextView
                    android:id="@+id/tvTotalInscripciones"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/Barra1"
                    android:layout_marginLeft="20dp"
                    android:text="5000"
                    android:textColor="@android:color/background_dark"
                    android:textSize="25dp"></TextView>

            </RelativeLayout>

            <TextView
                android:id="@+id/txtInscripcionesForaneos"
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llIncripcionesVendidas"
                android:layout_centerHorizontal="true"
                android:text="Inscripciones Foraneas Vendidas:"
                android:gravity="center"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <RelativeLayout
                android:id="@+id/llIncripcionesForaneos"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:layout_below="@+id/txtInscripcionesForaneos">

                <TextView
                    android:id="@+id/tvForaneasVendidas"
                    android:layout_width="57dp"
                    android:layout_height="match_parent"
                    android:text="50"
                    android:textColor="@android:color/background_dark"
                    android:textSize="25dp"></TextView>

                <TextView
                    android:id="@+id/Barra2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/tvForaneasVendidas"
                    android:text="/"
                    android:textColor="@android:color/background_dark"
                    android:textSize="25dp"></TextView>
                <TextView
                    android:id="@+id/tvTotalForaneos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/Barra2"
                    android:layout_marginLeft="20dp"
                    android:text="5000"
                    android:textColor="@android:color/background_dark"
                    android:textSize="25dp"></TextView>

            </RelativeLayout>

            <Button
                android:id="@+id/btnListaInscritos"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/llIncripcionesForaneos"
                android:text="Lista de Inscritos"></Button>

            <Button
                android:id="@+id/btnEditarCompetencia"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnListaInscritos"
                android:text="Editar Competencia"></Button>
            <Button
                android:id="@+id/btnPosponerEliminarCompetencia"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnEditarCompetencia"
                android:text="Posponer/Eliminar Competencia"></Button>
            <Button
                android:id="@+id/btnFotosResultados"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnPosponerEliminarCompetencia"
                android:text="Subir Fotos de Resultados"></Button>

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/MenuOrganizador"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main"/>


</RelativeLayout>