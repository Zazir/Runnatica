<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vista1_organizador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/barra_verde">

        <TextView
            android:id="@+id/tvNombreCompetencia"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:text="Nombre Competencia"
            android:textColor="@android:color/background_light"
            android:textSize="35dp"></TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="518dp"
        android:layout_marginTop="55dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Total Ventas"
                android:textSize="35dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <TextView
                android:id="@+id/ingreso"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:text="Precio"
                android:textSize="35dp"
                ></TextView>


            <TextView
                android:layout_width="279dp"
                android:layout_height="42dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="106dp"
                android:layout_marginEnd="79dp"
                android:text="Inscripciones Vendidas:"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/tvInscripcionesVendidas"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="146dp"
                android:layout_marginEnd="275dp"
                android:text="50"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/tvTotalInscripciones"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="147dp"
                android:layout_marginEnd="191dp"
                android:text="500"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="143dp"
                android:layout_marginEnd="253dp"
                android:text="/"
                android:textColor="@android:color/background_dark"
                android:textSize="30dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="189dp"
                android:layout_marginEnd="78dp"
                android:text="Inscripciones Foraneas Vendidas:"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/tvForaneasVendidas"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="263dp"
                android:layout_marginEnd="275dp"
                android:text="50"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/tvForaneosVendidasMax"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="263dp"
                android:layout_marginEnd="223dp"
                android:text="/"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/tvTotalForaneos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="260dp"
                android:layout_marginEnd="190dp"
                android:text="500"
                android:textColor="@android:color/background_dark"
                android:textSize="30dp"></TextView>

            <Button
                android:id="@+id/btnListaInscritos"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="322dp"
                android:layout_marginEnd="19dp"
                android:text="Lista de Inscritos"></Button>

            <Button
                android:id="@+id/btnFotosResultados"
                android:layout_width="331dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="381dp"
                android:layout_marginEnd="18dp"
                android:text="Subir Fotos de Resultados"></Button>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="732dp"
                android:layout_marginEnd="-1dp"></TextView>


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        ></LinearLayout>

</RelativeLayout>