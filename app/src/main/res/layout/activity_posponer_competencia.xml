<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".posponer_competencia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Posponer Competencia"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="-2dp"
        android:text="Fecha Actual:"
        android:textColor="@android:color/background_dark"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/tvFechaActual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="-4dp"
        android:text="2020-12-15"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"/>


    <TextView
        android:id="@+id/tvFechaPosponer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="182dp"
        android:layout_marginEnd="-2dp"
        android:text="Fecha Pospuesta"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btnPosponerFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="196dp"
        android:text="Seleccionar Fecha" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="218dp"
        android:layout_marginEnd="98dp"
        android:text="Hora"
        android:textColor="@android:color/background_dark"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/etHora"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="302dp"
        android:layout_marginTop="257dp"
        android:layout_marginEnd="82dp"/>

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="356dp"
        android:layout_marginEnd="50dp"
        android:background="@color/grisBoton"
        android:text="Guardar"
        android:textColor="#F0EEEE"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/algo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="-2dp"
        android:text="Â¿Quieres cancelar la competencia?"
        android:textColor="@android:color/background_dark"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/btnActualizarC"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="50dp"
        android:layout_below="@+id/algo"
        android:background="#cb3234"
        android:text="Cancelar"
        android:textColor="@color/primary_text"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/barra_verde"
        />

</RelativeLayout>