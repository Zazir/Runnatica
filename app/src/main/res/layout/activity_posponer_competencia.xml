<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".posponer_competencia">

    <LinearLayout
        android:id="@+id/VerdeArriba"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Posponer Competencia"
            android:textColor="@android:color/background_light"
            android:textSize="30sp"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="469dp"
        android:layout_height="613dp"
        android:layout_below="@+id/VerdeArriba"
        android:layout_above="@+id/MenuOrganizador">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="Fecha de Competencia Actual:"
                android:textColor="@android:color/background_dark"
                android:textSize="25dp"/>

            <TextView
                android:id="@+id/tvFechaActual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtFecha"
                android:gravity="center"
                android:text="2020-12-15"
                android:textColor="@android:color/background_dark"
                android:textSize="30sp"/>

            <RelativeLayout
                android:id="@+id/rrPosponer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFechaActual"
                android:layout_above="@+id/btnActualizar"
                android:layout_marginTop="1dp"
                android:background="@drawable/btn_desing1"
                tools:ignore="NotSibling">

                <TextView
                    android:id="@+id/tvFechaPosponer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Posponer Competencia"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/tvHoraPosponer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_below="@+id/tvFechaPosponer"
                    android:text=""
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/btnPosponerFecha"
                    android:layout_width="152dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/tvHoraPosponer"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#ef9a9a"
                    android:drawableLeft="@drawable/calendar"

                    android:text="Seleccionar Fecha" />

                <Button
                    android:id="@+id/btnActualizar"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/btnPosponerFecha"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/grisBoton"
                    android:text="Guardar"
                    android:textColor="#F0EEEE"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rrCancelarCompetencia"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_below="@+id/rrPosponer"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_desing1">

                <TextView
                    android:id="@+id/txtCancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Cancelar Competencia"
                    android:textColor="@android:color/background_dark"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/algo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtCancelar"
                    android:gravity="center"
                    android:text="Â¿Quieres cancelar la competencia?"
                    android:textColor="@android:color/background_dark"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/btnActualizarC"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_below="@+id/algo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="50dp"
                    android:background="#cb3234"
                    android:text="Cancelar"
                    android:textColor="@color/primary_text"
                    android:textSize="20sp" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/MenuOrganizador"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main"
        ></com.google.android.material.bottomnavigation.BottomNavigationView>

</RelativeLayout>