<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/llArriba"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Datos del Usuario"
            android:textColor="@android:color/background_light"
            android:textSize="30dp"></TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="578dp"
        android:layout_below="@+id/llArriba"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtFechaN"
                android:layout_width="346dp"
                android:layout_height="39dp"
                android:layout_below="@+id/btnHombre"
                android:layout_marginEnd="41dp"
                android:text="Fecha de Nacimiento:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />


            <Button
                android:id="@+id/btnSeleccionNacimiento"
                android:layout_width="166dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtFechaN"
                android:layout_marginEnd="191dp"
                android:background="@color/grisBoton"
                android:text="Seleccionar Fecha"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp"></Button>

            <TextView
                android:id="@+id/tvMostrarFecha"
                android:layout_width="146dp"
                android:layout_height="48dp"
                android:layout_below="@+id/txtFechaN"
                android:layout_marginLeft="200dp"
                android:textColor="@android:color/background_dark"
                android:textSize="20dp"></TextView>

            <TextView
                android:id="@+id/Ciudad"
                android:layout_width="117dp"
                android:layout_height="33dp"
                android:layout_below="@+id/tvResidencia"
                android:layout_marginEnd="243dp"
                android:text="Ciudad:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCiudad"
                android:text="Estado:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvPais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etEstado"
                android:text="Pais:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />


            <EditText
                android:id="@+id/etCiudad"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_below="@+id/Ciudad" />

            <EditText
                android:id="@+id/etEstado"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvEstado"
                android:inputType="text"
                />

            <EditText
                android:id="@+id/etPais"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_below="@+id/tvPais" />

            <Button
                android:id="@+id/btnMujer"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSexo"
                android:layout_marginLeft="110dp"
                android:background="@color/grisBoton"
                android:text="Mujer"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnHombre"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtSexo"
                android:layout_marginEnd="263dp"
                android:background="@color/grisBoton"
                android:text="Hombre"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnRegistrarse"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkTerminos"
                android:layout_marginLeft="45dp"
                android:background="@color/grisBoton"
                android:text="Registrar"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnFoto"
                android:layout_width="159dp"
                android:layout_height="31dp"
                android:layout_below="@+id/tvFoto"
                android:background="@color/grisBoton"
                android:text="Seleccionar"
                android:textColor="@android:color/background_dark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtnombre"
                android:layout_width="346dp"
                android:layout_height="39dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="46dp"
                android:text="Nombre y Apellido:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvFoto"
                android:layout_marginLeft="170dp"
                android:text="Archivo"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ivFotoUsuarioRegistro"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_below="@+id/btnFoto"></ImageView>
            <TextView
                android:id="@+id/tvResidencia"
                android:layout_width="346dp"
                android:layout_height="39dp"
                android:layout_below="@+id/btnSeleccionNacimiento"
                android:text="Lugar de Residencia:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvFoto"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPais"
                android:text="Foto:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvTyC"
                android:layout_width="310dp"
                android:layout_height="34dp"
                android:layout_below="@+id/ivFotoUsuarioRegistro"
                android:text="Terminos y Condiciones:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tvCondiciones"
                android:layout_width="257dp"
                android:layout_height="33dp"
                android:layout_below="@+id/tvTyC"
                android:layout_marginLeft="110dp"
                android:text="Terminos y Condiciones"
                android:textColor="#021BFA"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtSexo"
                android:layout_width="346dp"
                android:layout_height="39dp"
                android:layout_below="@+id/etNombre"
                android:layout_marginEnd="41dp"
                android:text="Sexo:"
                android:textColor="@android:color/background_dark"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/etNombre"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtnombre"
                android:layout_marginEnd="37dp"
                android:inputType="text"
                />


            <CheckBox
                android:id="@+id/checkTerminos"
                android:layout_width="109dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTyC"
                android:textColor="@android:color/background_dark"
                android:textSize="18sp"
                tools:text="Aceptar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="900dp"
                ></TextView>


        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"></LinearLayout>

</RelativeLayout>