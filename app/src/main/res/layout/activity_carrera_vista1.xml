<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".home">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="@drawable/barra_verde">
            </LinearLayout>

            <ImageView
                android:id="@+id/ivFotoCompetencia"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="60dp"
                android:background="@color/cardview_dark_background"></ImageView>

            <TextView
                android:id="@+id/tvNombreCompetencia"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="264dp"
                android:layout_marginEnd="1dp"
                android:text="Medio Maraton de la Ciudad De Mexico"
                android:textSize="35dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="360dp"
                android:text="Por:"
                android:textColor="@android:color/background_dark"
                android:textSize="30dp"></TextView>

            <TextView
                android:id="@+id/tvNombreOrganizador"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="360dp"
                android:layout_marginLeft="60dp"
                android:text="Usuario competidor:"
                android:textSize="30dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="410dp"
                android:background="@drawable/calendario"></ImageView>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="470dp"
                android:background="@drawable/reloj"></ImageView>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="530dp"
                android:background="@drawable/lugar"></ImageView>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="590dp"
                android:background="@drawable/boleto"></ImageView>

            <TextView
                android:id="@+id/tvFechaCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dia/Mes/Año"
                android:layout_marginTop="420dp"
                android:layout_marginLeft="70dp"
                android:textSize="25dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <TextView
                android:id="@+id/tvHoraCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora "
                android:layout_marginTop="480dp"
                android:layout_marginLeft="80dp"
                android:textSize="25dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <TextView
                android:id="@+id/tvLugarCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lugar"
                android:layout_marginTop="540dp"
                android:layout_marginLeft="80dp"
                android:textSize="25dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <TextView
                android:id="@+id/tvPrecioCompetencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Precio"
                android:layout_marginTop="595dp"
                android:layout_marginLeft="80dp"
                android:textSize="25dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción:"
                android:layout_marginTop="680dp"
                android:layout_marginLeft="10dp"
                android:textSize="35dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aqui se pone la descripcion de la carrera, carrera medio maraton de ciudad de Mexico."
                android:layout_marginTop="720dp"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foro"
                android:layout_marginTop="840dp"
                android:layout_marginLeft="10dp"
                android:textSize="35dp"
                android:textColor="@android:color/background_dark"
                ></TextView>

            <Spinner
                android:id="@+id/spForo"
                android:layout_width="189dp"
                android:layout_height="38dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="840dp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvForo"
                android:layout_width="373dp"
                android:layout_height="278dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="890dp"/>

            <EditText
                android:id="@+id/etRespuestaForo"
                android:layout_width="375dp"
                android:layout_height="81dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1170dp">
            </EditText>

            <Spinner
                android:id="@+id/spRespuestaCategoria"
                android:layout_width="211dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1250dp" />
            <Button
                android:id="@+id/btnEnviarForo"
                android:layout_width="155dp"
                android:layout_height="37dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="1250dp"
                android:text="Enviar"
                android:background="@color/verdeRun"
                >
            </Button>

            <TextView
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="1300dp"
                android:text="Tabla de resultados"
                android:textColor="@android:color/background_dark"
                android:textSize="35dp"
                ></TextView>

            <ImageView
                android:id="@+id/ivResultados"
                android:layout_width="362dp"
                android:layout_height="282dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1350dp"></ImageView>

            <Button
                android:id="@+id/btnIncribirse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignEnd="@id/ivResultados"
                android:layout_gravity="center"
                android:background="@null"
                android:text="Inscribirse"
                android:textColor="@android:color/background_light"
                android:textSize="35dp"></Button>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="495dp"
        android:layout_height="78dp"
        android:layout_marginTop="570dp">

        <TextView
            android:id="@+id/tvRegistrarse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/background_light"
            android:textSize="40dp"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        ></LinearLayout>

</RelativeLayout>