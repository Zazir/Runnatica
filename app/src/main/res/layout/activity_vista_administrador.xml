<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VistaAdministrador">

    <LinearLayout
        android:id="@+id/VistaArriba"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Vista Administrador"
                android:textColor="@android:color/background_light"
                android:textSize="40dp">
            </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/lvOpcionesAdministrador"
        android:layout_width="match_parent"
        android:layout_height="504dp"
        android:layout_below="@+id/VistaArriba"
        >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        ></LinearLayout>

</RelativeLayout>