<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde">

        <TextView
            android:id="@+id/tvNombreCiudad"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:text="Nombre de Ciudad"
            android:textColor="@android:color/background_light"
            android:textSize="40dp"></TextView>

    </LinearLayout>


    <Button
        android:id="@+id/botondeprueva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        ></Button>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgvCompetencia"
                android:layout_width="163dp"
                android:layout_height="150dp"
                android:layout_marginTop="60dp"
            android:background="@drawable/cdmx_maraton"></ImageView>

            <ImageView
                android:id="@+id/linea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="213dp"
                android:layout_marginEnd="2dp"
            android:background="@drawable/barra_negra"></ImageView>

            <TextView
                android:id="@+id/txvDescripcion"
                android:layout_width="243dp"
                android:layout_height="93dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="3dp"
                android:layout_marginTop="91dp"
                android:text="DescripciÃ³n"
                android:textColor="@android:color/background_dark"
            android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/txvPrecio"
                android:layout_width="73dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="-1dp"
                android:layout_marginTop="179dp"
                android:text="Precio"
                android:textColor="@android:color/background_dark"
            android:textSize="25dp"></TextView>

            <TextView
                android:id="@+id/txvTitulo"
                android:layout_width="242dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="62dp"
                android:text="Nombre Competencia"
                android:textColor="@android:color/background_dark"
            android:textSize="20dp"></TextView>

            <Button
                android:id="@+id/btnPrueba"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignEnd="@+id/linea"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="169dp"
                android:nextFocusDown="@id/txvPrecio"
                android:text="Testear Pago" />
        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/MenuUsuario"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginTop="658dp"
        android:background="@drawable/barra_verde"
        app:itemIconTint="@android:color/background_light"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main_menu">

    </android.support.design.widget.BottomNavigationView>

</RelativeLayout>