<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tvNombreCiudad"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:text="Nombre de Ciudad"
                android:textColor="@android:color/background_light"
                android:textSize="40dp"
                android:background="@color/verdeRun"></TextView>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcvCompetencia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvNombreCiudad"
            android:layout_marginTop="-47dp"
            android:nextFocusDown="@id/tvNombreCiudad" />

        <Button
            android:id="@+id/btnPrueba"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="629dp"
            android:nextFocusDown="@id/rcvCompetencia"
            android:text="Testear Pago" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="675dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/barra_verde"
        ></LinearLayout>

    <LinearLayout
        android:id="@+id/home"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="675dp"
        android:background="@drawable/casa"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:id="@+id/buscar"
        android:layout_width="71dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="675dp"
        android:background="@drawable/buscar"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/historial"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="675dp"
        android:background="@drawable/historial"
        android:orientation="horizontal">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ajustes"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="323dp"
        android:layout_marginTop="675dp"
        android:background="@drawable/ajustes"
        android:orientation="horizontal">

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    </ScrollView>

</RelativeLayout>