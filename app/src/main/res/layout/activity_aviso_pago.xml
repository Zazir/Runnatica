<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvisoPago">

    <LinearLayout
        android:id="@+id/VerdeArriba"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Aviso"
            android:textColor="@android:color/background_light"
            android:textSize="40dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Precaucion"
        android:layout_width="147dp"
        android:layout_height="140dp"
        android:layout_below="@+id/VerdeArriba"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:background="@drawable/precaucion"
        android:orientation="vertical"></LinearLayout>
    <TextView
        android:id="@+id/Aviso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Precaucion"
        android:text="Aviso:"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@android:color/holo_red_dark"
        ></TextView>

    <LinearLayout
        android:id="@+id/Mensajes"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_below="@+id/Aviso"
        android:background="@drawable/btn_desing1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Primero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Solo se puede pagar inscripciones con precio total minimo de 300 MXN con Tarjeta"
            android:textColor="@android:color/background_dark"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"></TextView>

        <TextView
            android:id="@+id/Segundo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- Solo se puede registrar un usuario competidor pagando en Efectivo en tiendas de Conveniencia (Oxxo, Seven Eleven, etc)"
            android:textColor="@android:color/background_dark"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"></TextView>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/Progreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Mensajes"
        android:layout_marginLeft="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        ></ProgressBar>
    <TextView
        android:id="@+id/Cargando"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cargando..."
        android:gravity="center"
        android:layout_below="@+id/Progreso"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        ></LinearLayout>

</RelativeLayout>