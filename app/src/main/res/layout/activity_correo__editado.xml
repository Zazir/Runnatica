<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Correo_Editado">

    <LinearLayout
        android:id="@+id/BarraSuperior"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@drawable/barra_verde"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Confirmación"
            android:textColor="@android:color/background_light"
            android:textSize="40dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvBienvenido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido!"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="120dp"
        android:textSize="50dp"
        android:textColor="@android:color/background_dark"
        ></TextView>
    <TextView
        android:id="@+id/tvMostrarCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Correo"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvBienvenido"
        android:textSize="20dp"
        android:textColor="@android:color/background_dark"
        ></TextView>
    <TextView
        android:id="@+id/tvTextoCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Te has inscrito a la Competencia"
        android:gravity="center"
        android:layout_below="@+id/tvMostrarCorreo"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="@android:color/background_dark"
        ></TextView>

    <LinearLayout
        android:id="@+id/ivBienvenido"
        android:layout_width="162dp"
        android:layout_height="154dp"
        android:layout_below="@+id/tvTextoCorreo"
        android:layout_marginLeft="95dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bien"
        android:orientation="horizontal"></LinearLayout>
    <Button
        android:id="@+id/btnAdelante"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_below="@+id/ivBienvenido"
        android:layout_marginTop="10dp"
        android:text="Siguiente"
        ></Button>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/barra_verde"
        android:minHeight="@android:dimen/thumbnail_height"
        app:itemTextColor="@android:color/background_dark"
        app:menu="@menu/main_menu"/>

</RelativeLayout>